{
  "name": "v2ex-mini",
  "version": "1.0.0",
  "private": true,
  "description": "unofficial mini app for v2ex.com",
  "templateInfo": {
    "name": "default",
    "typescript": true,
    "css": "Sass",
    "framework": "React"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "build": "taro build --type weapp",
    "dev": "npm run build -- --watch",
    "lint": "npx eslint --fix",
    "lint:style": "npx stylelint \"**/*.scss\" --fix",
    "format": "npx prettier --write src"
  },
  "browserslist": [
    "last 3 versions",
    "Android >= 4.1",
    "ios >= 8"
  ],
  "author": "konka",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheKonka/v2ex-mini.git"
  },
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "^7.25.4",
    "@tarojs/components": "3.6.27",
    "@tarojs/plugin-framework-react": "3.6.27",
    "@tarojs/plugin-platform-weapp": "3.6.27",
    "@tarojs/react": "3.6.27",
    "@tarojs/runtime": "3.6.27",
    "@tarojs/taro": "3.6.27",
    "classnames": "^2.5.1",
    "dayjs": "^1.11.13",
    "lucide-static": "^0.436.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.5",
    "use-debounce": "^9.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@eslint/compat": "^1.1.1",
    "@eslint/js": "^9.9.1",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.15",
    "@tarojs/cli": "3.6.27",
    "@tarojs/webpack5-runner": "3.6.27",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@types/webpack-env": "^1.18.5",
    "babel-preset-taro": "3.6.27",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "5.1.0-beta-26f2496093-20240514",
    "globals": "^15.9.0",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "postcss-preset-env": "^9.6.0",
    "prettier": "^3.3.3",
    "react-refresh": "^0.11.0",
    "stylelint": "^16.8.2",
    "stylelint-config-standard-scss": "^13.1.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "8.2.0",
    "webpack": "^5.94.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.scss": "stylelint --fix"
  },
  "engines": {
    "node": ">=18"
  }
}