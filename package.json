{
	"name": "v2ex-mini",
	"version": "1.0.0",
	"private": true,
	"description": "unofficial mini app for v2ex.com",
	"templateInfo": {
		"name": "default",
		"typescript": true,
		"css": "sass"
	},
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"prepare": "husky install",
		"build": "taro build --type weapp",
		"dev": "npm run build -- --watch",
		"lint": "npx eslint --fix",
		"lint:style": "npx stylelint \"**/*.scss\" --fix",
		"format": "npx prettier --write src"
	},
	"browserslist": [
		"last 3 versions",
		"Android >= 4.1",
		"ios >= 8"
	],
	"author": "konka",
	"repository": {
		"type": "git",
		"url": "https://github.com/TheKonka/v2ex-mini.git"
	},
	"license": "MIT",
	"dependencies": {
		"@babel/runtime": "^7.24.5",
		"@tarojs/components": "3.6.27",
		"@tarojs/plugin-framework-react": "3.6.27",
		"@tarojs/plugin-platform-weapp": "3.6.27",
		"@tarojs/react": "3.6.27",
		"@tarojs/runtime": "3.6.27",
		"@tarojs/taro": "3.6.27",
		"classnames": "^2.5.1",
		"dayjs": "^1.11.11",
		"lucide-static": "^0.341.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"remark-gfm": "^4.0.0",
		"remark-parse": "^11.0.0",
		"unified": "^11.0.4",
		"use-debounce": "^9.0.4"
	},
	"devDependencies": {
		"@babel/core": "^7.24.5",
		"@pmmmwh/react-refresh-webpack-plugin": "^0.5.13",
		"@tarojs/webpack5-runner": "3.6.27",
		"@types/react": "^18.3.1",
		"@types/react-dom": "^18.3.0",
		"@types/webpack-env": "^1.18.4",
		"@typescript-eslint/eslint-plugin": "^7.8.0",
		"@typescript-eslint/parser": "^7.8.0",
		"babel-preset-taro": "3.6.27",
		"eslint": "9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-react": "^7.34.1",
		"eslint-plugin-react-hooks": "^4.6.2",
		"husky": "^8.0.3",
		"lint-staged": "^13.3.0",
		"postcss-preset-env": "^9.5.9",
		"prettier": "^3.2.5",
		"react-refresh": "^0.11.0",
		"stylelint": "^15.11.0",
		"stylelint-config-standard-scss": "^8.0.0",
		"typescript": "^5.4.5"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"prettier --write",
			"eslint --cache --fix"
		],
		"*.scss": "stylelint --fix"
	},
	"engines": {
		"node": ">=18.20.1"
	}
}
